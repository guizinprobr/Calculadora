#include <stdio.h>
#include <stdlib.h>

int main() {
    int op;
	float n1, n2;
    char resposta;

    do {
        system("cls"); // limpa a tela
        printf("===============================\n");
        printf("Calculadora Simples\n");
        printf("===============================\n");
        printf("Selecione uma opcao: \n");
        printf("[1] Soma\n[2] Subtracao\n[3] Multiplicacao\n[4] Divisao\n[5] Sair\n");
        printf("Opcao: ");
        fflush(stdin);
        scanf("%d", &op);
        switch(op){
        	case 1: printf("Digite o primeiro numero: ");
                	scanf("%f", &n1);
                	printf("Digite o segundo numero: ");
                	scanf("%f", &n2);
                	printf("Resultado: %f + %f = %f\n", n1, n2, n1 + n2);
                	printf("Deseja efetuar outra operacao? (s/n) ");
                	scanf(" %c", &resposta);
                		
                	break;
                			case 2: printf("Digite o primeiro numero: ");
                					scanf("%f", &n1);
                					printf("Digite o segundo numero: ");
                					scanf("%f", &n2);
                					printf("Resultado: %f - %f = %f\n", n1, n2, n1 - n2);
                					printf("Deseja efetuar outra operacao? (s/n) ");
                					scanf(" %c", &resposta);
                					break;
                								 case 3:printf("Digite o primeiro numero: ");
										               	scanf("%f", &n1);
										                printf("Digite o segundo numero: ");
										                scanf("%f", &n2);
										                printf("Resultado: %f * %f = %f\n", n1, n2, n1 * n2);
										                printf("Deseja efetuar outra operacao? (s/n) ");
                										scanf(" %c", &resposta);
										                break;
																			case 4: printf("Digite o primeiro numero: ");
																	                scanf("%f", &n1);
																	                printf("Digite o segundo numero: ");
																	                scanf("%f", &n2);
																	                if (n2 == 0) {
																	                    printf("Erro: divisão por zero não permitida.\n");
																	                    system("pause");
																	                    printf("Deseja efetuar outra operacao? (s/n) ");
                																		scanf(" %c", &resposta);
																	                    break;
																	                } else {
																	                    printf("Resultado: %f / %f = %f\n", n1, n2, n1 / n2);
																	                    printf("Deseja efetuar outra operacao? (s/n) ");
                																		scanf(" %c", &resposta);
                																		break;
																	                }
																	                
																	                				case 5:
																	                				
																	                					break;
																	                							default:
																	                								printf("Escreva uma opcao valida\n");
																	                								system("pause");
																	                								continue;
       
    }
    if(resposta!='s'&& resposta !='S'){
    	break;
	}
	else if( resposta != 's' && resposta != 'S' && resposta!='n'&& resposta !='N')
	{
		printf("Insira apenas s/n ");
	}
    
    }while(op!=5);
   		system("cls");
    	printf("Obrigado por usar a calculadora. \n"); 
		 




}
